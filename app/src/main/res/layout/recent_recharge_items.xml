<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_rechrage_icon"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/camera"
        android:padding="5dp"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:id="@+id/rl_recharge_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_go_detail"
        android:layout_toRightOf="@+id/iv_rechrage_icon">
        <TextView
            android:id="@+id/tv_recharge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/tv_recharge_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recharge_name"
            android:gravity="left"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:text="Number"
            android:textSize="12sp" />

    </RelativeLayout>
   <ImageView
       android:id="@+id/iv_go_detail"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:src="@android:drawable/ic_menu_save"
       android:layout_centerVertical="true"
       android:layout_alignParentEnd="true"
      />

</RelativeLayout>